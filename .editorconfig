root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[{*.md,LICENSE,NOTICE}]
insert_final_newline = false
trim_trailing_whitespace = false

[*.{yaml,yml}]
indent_size = 2
indent_style = space

[*.{js,json,ts}]
indent_size = 2
indent_style = space

[*.json]
insert_final_newline = false

[*.xml]
indent_size = 2
indent_style = space

[*.java]
indent_size = 4
indent_style = space

[*.kt]
indent_size = 4
indent_style = space
